{
  "name": "marathon-manifest",
  "version": "0.8.0",
  "type": "module",
  "description": "Marathon game data manifest library",
  "license": "MIT",
  "scripts": {
    "build": "tsc --project tsconfig.lib.json",
    "lint": "eslint \"**/*.ts\"",
    "lint:fix": "eslint \"**/*.ts\" --fix",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "format:fix": "prettier --write \"**/*.{ts,js,json,md}\"",
    "smoke-test": "npm run lint && npm run format:check && npm run type-check",
    "type-check": "tsc --project tsconfig.lib.json --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "9.17.0",
    "@types/node": "22.10.5",
    "eslint": "9.17.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "prettier": "3.4.2",
    "prettier-plugin-multiline-arrays": "4.1.3",
    "typescript": "5.7.2",
    "typescript-eslint": "8.19.1"
  }
}
